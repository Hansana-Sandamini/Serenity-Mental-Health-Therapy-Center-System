<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/serenity_mental_health?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Ijse@1234</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="lk.ijse.hibernate.serenitymentalhealththerapycenter.entity.Patient"/>
        <mapping class="lk.ijse.hibernate.serenitymentalhealththerapycenter.entity.TherapyProgram"/>
        <mapping class="lk.ijse.hibernate.serenitymentalhealththerapycenter.entity.TherapySession"/>
        <mapping class="lk.ijse.hibernate.serenitymentalhealththerapycenter.entity.Payment"/>
        <mapping class="lk.ijse.hibernate.serenitymentalhealththerapycenter.entity.Therapist"/>
        <mapping class="lk.ijse.hibernate.serenitymentalhealththerapycenter.entity.User"/>
    </session-factory>
</hibernate-configuration>